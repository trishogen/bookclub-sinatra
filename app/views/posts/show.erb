<h2> <%= @post.title %></h2>
<h3> <%= @post.user.username %> on <%= @post.created_at.to_date %> </h3>
<p> <%= @post.content %> </p>
Last updated: <%= @post.updated_at.to_date %></p> <br>

<% if @post.user_id == current_user.id %>
<form action="/clubs/<%= @club.slug %>/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Post">
</form>


<a href="/clubs/<%= @club.slug %>/posts/<%= @post.id %>/edit">Edit post</a> |
<% end %>
<a href="/clubs/<%= @club.slug %>/posts"> Back to posts</a> |
<a href="/clubs/<%= @club.slug %>">Back to club </a> |
<a href="/clubs">All clubs</a>
